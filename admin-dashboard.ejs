<!DOCTYPE html>
<html>
<head>
  <title>Admin Dashboard</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="p-5">

  <div class="container">
    <h2 class="mb-4">Add New Product</h2>

    <form action="/admin/add-product" method="POST" class="row g-3">
      <div class="col-md-6">
        <input type="text" name="name" class="form-control" placeholder="Product Name" required>
      </div>
      <div class="col-md-6">
        <input type="number" step="0.01" name="price" class="form-control" placeholder="Price" required>
      </div>
      <div class="col-12">
        <textarea name="description" class="form-control" placeholder="Description" required></textarea>
      </div>
      <div class="col-12">
        <input type="text" name="image" class="form-control" placeholder="Image URL" required>
      </div>

      <!-- Gender Selector -->
      <div class="col-md-6">
        <select name="target_group" class="form-select" required>
          <option value="">Select Target Group</option>
          <option value="women">Women</option>
          <option value="men">Men</option>
          <option value="kids">Kids</option>
        </select>
      </div>

      <!-- Category Selector -->
      <div class="col-md-6">
        <select name="category" class="form-select" required>
          <option value="">Select Category</option>
          <option value="new">New In</option>
          <option value="clothing">Clothing</option>
          <option value="shoes">Shoes</option>
          <option value="accessories">Accessories</option>
          <option value="bag">Bag</option>
        </select>
      </div>

      <!-- Featured Checkbox -->
      <div class="col-12 form-check">
        <input type="checkbox" name="featured" class="form-check-input" id="featured">
        <label class="form-check-label" for="featured">Feature this product</label>
      </div>

      <div class="col-12">
        <button class="btn btn-success w-100">Add Product</button>
      </div>
    </form>
  </div>

</body>
</html>
