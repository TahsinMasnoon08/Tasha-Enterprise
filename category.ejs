<!DOCTYPE html>
<html>
<head>
  <title><%= title %>'s Collection</title>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css" />
  <style>
    :root {
      --primary-color: #3f51b5;
      --primary-hover: #303f9f;
      --accent-color: #ff4081;
    }
    body {
      background-color: #f8f9fa;
    }
    .navbar-logo {
      height: 45px;
    }
    .filter-bar {
      margin-top: 150px; /* Adjust below fixed navbar */
      padding-top: 80px;  /* Gap from navbar */
      display: flex;
      flex-direction: column;
      align-items: center;
    }
    .filter-group,
    .filter-category {
      display: flex;
      justify-content: center;
      flex-wrap: wrap;
      gap: 25px;
    }
    .filter-category {
      margin-top: 30px; /* Gap between group and category */
    }
    .filter-link {
      text-decoration: none;
      color: black;
      font-weight: 600;
      font-size: 1.3rem;
    }
    .filter-link.active {
      text-decoration: underline;
    }
    .sale-link {
      color: red;
    }
    .section-title {
      margin: 40px 0 20px;
      font-size: 2rem;
      font-weight: bold;
    }
    .product-card {
      transition: transform 0.3s, box-shadow 0.3s;
    }
    .product-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 10px 20px rgba(0,0,0,0.1);
    }
    .product-img-container {
      height: 250px;
      overflow: hidden;
    }
    .product-img {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
  </style>
</head>
<body>

<!-- ✅ Navbar (same as home.ejs, no Hi, user) -->
<nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm position-fixed w-100 z-3">
  <div class="container d-flex align-items-center justify-content-between">
    <a class="navbar-brand d-flex align-items-center me-3" href="/">
      <img src="/images/tashalogo.png" alt="Tasha Logo" height="150" width="200">
    </a>
    <form class="d-none d-lg-flex flex-grow-1 me-4" role="search">
      <input class="form-control rounded-pill px-3" type="search" placeholder="Search products..." aria-label="Search" style="min-width: 300px;">
    </form>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
      <span class="navbar-toggler-icon"></span>
    </button>
    <ul class="navbar-nav gap-3 align-items-center">
      <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
      <li class="nav-item"><a class="nav-link" href="#">Shop</a></li>
      <li class="nav-item"><a class="nav-link" href="#">About Us</a></li>
      <li class="nav-item"><a class="nav-link" href="#">Contact</a></li>
      <% if (role === "admin") { %>
        <li class="nav-item">
          <a class="nav-link fw-bold text-white px-3 py-2 rounded" href="/admin/dashboard" style="background-color: var(--primary-color);">
            Admin Dashboard
          </a>
        </li>
      <% } %>
      <li class="nav-item dropdown user-dropdown">
        <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
          <img src="/images/human.png" alt="User" width="20" height="20" class="ms-1">
        </a>
        <ul class="dropdown-menu dropdown-menu-end mt-2" aria-labelledby="userDropdown">
          <li><a class="dropdown-item" href="#">Account</a></li>
          <li><a class="dropdown-item" href="#">Personal Information</a></li>
          <li><a class="dropdown-item" href="#">Orders</a></li>
          <li><hr class="dropdown-divider" /></li>
          <li><a class="dropdown-item text-danger" href="/logout">Logout</a></li>
        </ul>
      </li>
    </ul>
  </div>
</nav>

<!-- 🔘 Filters -->
<div class="filter-bar">
  <div class="filter-group">
    <a class="filter-link <%= title === 'Women' ? 'active' : '' %>" href="/category?group=women">Women</a>
    <a class="filter-link <%= title === 'Men' ? 'active' : '' %>" href="/category?group=men">Men</a>
    <a class="filter-link <%= title === 'Kids' ? 'active' : '' %>" href="/category?group=kids">Kids</a>
  </div>
  <div class="filter-category">
    <a class="filter-link sale-link" href="/category?group=<%= title.toLowerCase() %>&sale=true">Sale</a>
    <a class="filter-link" href="/category?group=<%= title.toLowerCase() %>&category=new">New In</a>
    <a class="filter-link" href="/category?group=<%= title.toLowerCase() %>&category=clothing">Clothing</a>
    <a class="filter-link" href="/category?group=<%= title.toLowerCase() %>&category=shoes">Shoes</a>
    <a class="filter-link" href="/category?group=<%= title.toLowerCase() %>&category=accessories">Accessories</a>
    <a class="filter-link" href="/category?group=<%= title.toLowerCase() %>&category=bag">Bag</a>
  </div>
</div>

<!-- 🛍️ Product Grid -->
<div class="container">
  <h2 class="text-center section-title"><%= title %>'s Collection</h2>
  <% if (products.length === 0) { %>
    <p class="text-center text-muted">No products found in this category.</p>
  <% } else { %>
    <div class="row g-4">
      <% products.forEach(product => { %>
        <div class="col-md-3">
          <div class="card product-card h-100">
            <div class="product-img-container">
              <img src="<%= product.image %>" class="card-img-top product-img" alt="<%= product.name %>">
            </div>
            <div class="card-body">
              <h5 class="card-title"><%= product.name %></h5>
              <p class="card-text"><%= product.description %></p>
              <div class="d-flex justify-content-between align-items-center">
                <span class="fw-bold">$<%= product.price %></span>
                <a href="#" class="btn btn-sm btn-outline-primary">Add to Cart</a>
              </div>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } %>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
